<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="20dp">

    <!--    Form Layout Wraper -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/signin_form_container"
        >

        <!--    Heading Layout-->
        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login!"
            android:textSize="45sp"
            android:textStyle="bold"
            />


        <!--    Email Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="20sp"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/signin_email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="max@gmail.com"
                android:inputType="textEmailAddress"
                android:textSize="15dp"
                />
        </LinearLayout>

        <!--    Passward Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Passward"
                android:textSize="20sp"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/signin_password_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="*********"
                android:inputType="textPassword"
                android:textSize="15dp"
                />
        </LinearLayout>

        <!--    Submit Button -->

        <Button
            android:id="@+id/signin_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:textSize="20sp"
            android:text="Signin"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Signup here"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:onClick="signupForm"/>

    </LinearLayout>

    <!--    ProgressBar -->
    <LinearLayout
        android:id="@+id/signin_progress_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        >

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>